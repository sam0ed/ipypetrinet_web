{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "app_src/**/*.ts",
    "app_src/**/*.tsx"
  ],
  "exclude": []
} 